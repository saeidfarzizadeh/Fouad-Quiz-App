{
  "expo": {
    "name": "فُؤاد - طرح قرآنی",
    "slug": "fouad-quranic-project",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "برنامه آزمون قرآن و تفسیر بر اساس اندیشه استاد علی صفایی حائری",
    "keywords": ["قرآن", "تفسیر", "آزمون", "مذهبی", "فؤاد", "صفایی حائری"],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      },
      "bundleIdentifier": "com.fouad.quranic"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E7D32"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.fouad.quranic"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Vazir-Regular.ttf"]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "fouad-quranic-project"
      }
    }
  }
}
